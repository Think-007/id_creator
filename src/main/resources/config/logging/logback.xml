<?xml version="1.0" encoding="UTF-8"?>
<configuration >
	<substitutionProperty name="log.base" value="../logs/logback" />
	<jmxConfigurator />
	
	<appender name="stdout" class="ch.qos.logback.core.ConsoleAppender">
		<layout class="ch.qos.logback.classic.PatternLayout">
			<pattern>%date [%thread] %-5level %logger{80} - %msg%n</pattern>
		</layout>
	</appender>
	
	<appender name="logfile-service" class="ch.qos.logback.core.rolling.RollingFileAppender">
		<File>${log.base}_idcreator.log</File>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<FileNamePattern>${log.base}.%d{yyyy-MM-dd}_idcreator.log.zip</FileNamePattern>
		</rollingPolicy>
		<layout class="ch.qos.logback.classic.PatternLayout">
			<pattern>%date [%thread] %-5level %logger{80} - %msg%n</pattern>
		</layout>
	</appender>
	
	<logger name="com.think">
		<level value="DEBUG" />
	</logger>
	
	<root>
		<level value="WARN" />
		<appender-ref ref="stdout" />
		<appender-ref ref="logfile-service" />
	</root>
</configuration>
